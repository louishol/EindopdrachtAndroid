<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louis.eindopdrachtandroid.ResultActivity">


    <ImageView
        android:id="@+id/first_image"
        android:src = "@drawable/eetnu"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src = "@drawable/end"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zoek resultaten"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/first_image"
        android:layout_centerHorizontal="true" />

        <!-- "Fragment A" -->
        <fragment class="com.example.louis.eindopdrachtandroid.Models.listviewFragment"
            android:id="@+id/fragDetails"
            android:layout_width="100pt"
            android:layout_height="match_parent"/>

        <fragment class="com.example.louis.eindopdrachtandroid.Models.detailFragment"
            android:id="@+id/fragList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_toRightOf="@+id/fragDetails"
            android:layout_alignParentEnd="true" />


</RelativeLayout>
