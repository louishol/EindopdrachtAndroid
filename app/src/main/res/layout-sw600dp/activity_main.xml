<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <ImageView
        android:id="@+id/first_image"
        android:src = "@drawable/eetnu_large"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:scaleType="center"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zoek eenvoudig restaurants bij jouw in de buurt!"
        android:id="@+id/textView"
        android:layout_below="@+id/first_image"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Via deze App kan er op restaurants gezocht worden, dit door middel van categorie en via waarderingen van klanten."
        android:id="@+id/textView4"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src = "@drawable/end_large"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:scaleType="center"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin met zoeken naar restaurants"
        android:id="@+id/button"
        android:onClick="Next"
        android:layout_above="@+id/btnSettings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ga naar instellingen"
        android:id="@+id/btnSettings"
        android:onClick="Settings"
        android:layout_above="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
